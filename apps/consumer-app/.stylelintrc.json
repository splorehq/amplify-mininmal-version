{
	"extends": ["stylelint-config-html", "stylelint-config-standard", "stylelint-config-prettier"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["apply", "responsive", "screen", "tailwind", "variants"]
			}
		],
		"function-no-unknown": [true, { "ignoreFunctions": ["strip", "theme"] }]
	}
}
